
@{
    ViewData["Title"] = "ViewUsersDeletedLog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model UserManagement.Web.Models.LogItems.LogListViewModel
@{
    var user = ViewData.Model;
}
<h1>All Deleted Users</h1>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Action</th>
                <th>Field Values</th>
                <th>Record Date</th>
                <th style="width: 1px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @item.Action
                    </td>
                    <td>
                        @item.Fields
                    </td>
                    <td>
                        @item.Created
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-controller="Users" asp-action="List" class="btn btn-default">Show All Users</a>
</div>

