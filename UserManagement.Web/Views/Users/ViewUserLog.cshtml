
@{
    ViewData["Title"] = "ViewUserLog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model UserManagement.Web.Models.LogItems.LogListItemViewModel
@{
    var user = ViewData.Model;
}
<h1>ViewUserLog for UserID: @user.Id</h1>
<h2>@ViewBag.Message</h2>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Action</th>
                <th>Field Values</th>
                <th>Date Created</th>
                <th style="width: 1px;"></th>
            </tr>
        </thead>
        <tbody>

                <tr>
                    <td>
                    @user.Action
                    </td>
                    <td>
                    @user.Fields
                    </td>
                    <td>
                    @user.Created
                    </td>
                </tr>

        </tbody>
    </table>
</div>

<div>
    <a asp-controller="Users" asp-action="List" class="btn btn-default">Show All</a>
</div>

